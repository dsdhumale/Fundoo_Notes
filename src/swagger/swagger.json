{
    "swagger": "2.0",
    "info": {
        "version": "v1",
        "title": "Fundoo Notes",
        "description": "Fundoo Notes CLI"
    },
    "host": "localhost:2300",
    "basePath": "/api/v1/",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/users/registration": {
            "post": {
                "tags": [
                    "User"
                ],
                "description": "New user registration",
                "parameters": [
                    {
                        "name": "New User registration",
                        "in": "body",
                        "description": "Enter valid user details",
                        "schema": {
                            "$ref": "#/definitions/NewUser"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "201": {
                        "description": "User registration done successfully"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
            }
        },
        "/users/login": {
            "post": {
                "tags": [
                    "User"
                ],
                "description": "User login",
                "parameters": [
                    {
                        "name": "User Login",
                        "in": "body",
                        "description": "Enter valid user email-id and password",
                        "schema": {
                            "$ref": "#/definitions/UserLogin"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "201": {
                        "description": "User logged successfully done"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
            }
        },
        "/users/forgotpassword": {
            "put": {
                "tags": [
                    "User"
                ],
                "description": "Forgot Password",
                "parameters": [
                    {
                        "name": "Forgot password",
                        "in": "body",
                        "description": "Enter valid user email-id ",
                        "schema": {
                            "$ref": "#/definitions/ForgotPassword"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "201": {
                        "description": "Reset link send successfully"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
            }
        },
        "/users/resetpassword": {
            "put": {
                "tags": [
                    "User"
                ],
                "description": "Reset Password",
                "parameters": [
                    {
                        "name": "Reset password",
                        "in": "body",
                        "description": "Enter new password  ",
                        "schema": {
                            "$ref": "#/definitions/ResetPassword"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "201": {
                        "description": "Password updated successfully"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                },
                "security": [
                    {
                        "JWT": []
                    }
                ]
            }
        }




    },
    


    "definitions": {
        "NewUser": {
            "type": "object",
            "properties": {
                "firstName": {
                    "type": "string"
                },
                "lastName": {
                    "type": "string"
                },
                "emailID": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "UserLogin": {
            "type": "object",
            "properties": {
                "emailID": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "ForgotPassword": {
            "type": "object",
            "properties": {
                "emailID": {
                    "type": "string"
                }
                
            }
        },

        "ResetPassword": {
            "type": "object",
            "properties": {
                "password": {
                    "type": "string"
                }
                
            }
        }

    }
}